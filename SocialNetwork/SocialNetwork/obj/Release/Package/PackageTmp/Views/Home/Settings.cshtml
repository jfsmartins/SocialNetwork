@model SocialNetwork.Models.Utilizador

@{
    ViewBag.Title = "Definições";
}



@*@using (Html.BeginForm())*@
@using (Html.BeginForm("Settings","Home",FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <br />
        <div class="row">
            @*<div class="col-md-3">

            </div>*@
            <div class="col-md-12">
                <center>
    <a href="#">
        <img class="media-object img-circle" style="height:120px; width:120px;" src="@{@Session["foto"]}" alt = "..." >
    </a>
            </center>
                <center><h4>@Session["username"]</h4></center>
</div>
        </div>
        <br />
        <div class="row">
            
                <div class="col-md-12">
                    @ViewBag.Message

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.idUtilizador)

                    <div class="form-group">
                        @Html.LabelFor(model => model.username, "Username", htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.email, "E-mail", htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.pwd, "Password", htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.pwd, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            @Html.ValidationMessageFor(model => model.pwd, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">
                        @Html.LabelFor(model => model.foto, "Foto", htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            <input id="File1" type="file" name="nome" />
                            @Html.ValidationMessageFor(model => model.foto, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-5 col-md-7">
                            <input type="submit" value="Gravar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            
        </div>

        </div>
}


